<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".sia_roles.roles_guardar">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/estilo_scroll"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="2dp"
            tools:layout_editor_absoluteY="3dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/estilo_titulos"
        android:gravity="center"
        android:text="ACTUALIZAR ROL"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/viewNombre_Rol"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Nombre:"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/txtNombre_Rol"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/estilo_texto"
        android:hint="Escriba el nombre del rol"
        android:inputType="textPersonName"
        android:padding="5dp"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/viewCodigo_Rol"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Código:"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/txtCodigo_Rol"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/estilo_texto"
        android:hint="Escriba el código del rol"
        android:inputType="textPersonName"
        android:padding="5dp"
        android:textSize="20dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnActualizar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/estilo_boton"
        android:backgroundTint="#1DA323"
        android:text="ACTUALIZAR"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold" />

        </LinearLayout>

    </ScrollView>


</LinearLayout>