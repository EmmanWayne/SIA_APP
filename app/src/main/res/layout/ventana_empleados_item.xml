<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/estilo_titulos"
    android:orientation="horizontal"
    android:padding="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="3dp">

            <TextView
                android:id="@+id/viewNombres"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:background="@drawable/estilo_texto"
                android:gravity="center"
                android:padding="5dp"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/viewApellidos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:background="@drawable/estilo_texto"
                android:gravity="center"
                android:padding="5dp"
                android:textColor="@color/black"
                android:textSize="15dp"/>

            <TextView
                android:id="@+id/viewIdentidad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:background="@drawable/estilo_texto"
                android:gravity="center"
                android:padding="5dp"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/viewCargo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:background="@drawable/estilo_texto"
                android:gravity="center"
                android:padding="5dp"
                android:textColor="@color/black"
                android:textSize="15dp"/>

            <TextView
                android:id="@+id/viewTelefono"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:background="@drawable/estilo_texto"
                android:gravity="center"
                android:padding="5dp"
                android:textColor="@color/black"
                android:textSize="15dp"/>

            <TextView
                android:id="@+id/viewDireccion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:background="@drawable/estilo_texto"
                android:gravity="center"
                android:padding="5dp"
                android:textColor="@color/black"
                android:textSize="15dp"/>


        </LinearLayout>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_weight=".1"
            android:background="@drawable/estilo_titulos"
            android:padding="2dp"
            app:srcCompat="@drawable/icono_empleados"
            tools:srcCompat="@drawable/icono_empleados" />

    </LinearLayout>
</RelativeLayout>